  "title": "A schema for Spaceship Registry",
  "description": "A schema for Spaceship Registry",
  "type": "object",
  "properties": {
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description", "url"],
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "internal": {
            "type": "boolean"
          }
        }
      }
    }
  }
}
